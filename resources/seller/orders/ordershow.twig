{% extends "layout.twig" %}

{% block ordershow %}

<a href="/seller/orders/index.php" class="btn btn-primary link-warning">Index</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Address</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">{{ item['id'] }}</th>
            <td>{{ item['product']['name'] }}</td>
            <td>{{ item['quantity'] }}</td>
            <td>{{ item['address'] }}</td>
        </tr>

    </tbody>
</table>

{% endblock %}