{% extends "layout.twig" %}

{% block productindex %}

<div class="row row-cols-1 row-cols-md-3 g-4 mt-1">
    {% for item in items %}
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ item['name']}}</h5>
                    <p class="card-text">{{ item['color']}}</p>
                    <p class="card-text">{{ item['size']}}</p>
                    <form class="d-flex" action="/customer/orders/create.php" method="post">
                        <input value="{{ item['id'] }}" class="form-control me-2" type="hidden" name="id">
                        <button class="btn btn-success btn-primary-success" type="submit">Order It!</button>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}