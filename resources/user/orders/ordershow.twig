{% extends "layout.twig" %}

{% block ordershow %}

<a href="/user/orders/index.php" class="btn btn-primary link-warning">Index</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">{{ item['id'] }}</th>
            <td>{{ item['product']['name'] }}</td>
            <td>{{ item['quantity'] }}</td>
            <td>{{ item['address'] }}</td>
            <td>
                <form class="d-flex" action="/user\orders\edit.php" method="post">
                    <input value="{{ item['id'] }}" class="form-control me-2" type="hidden" name="id">
                    <button class="btn btn-outline-warning" type="submit">Edit</button>
                </form>
                <form class="d-flex" action="/user\orders\delete.php" method="post">
                    <input value="{{ item['id'] }}" class="form-control me-2" type="hidden" name="id">
                    <button class="btn btn-outline-danger" type="submit">Delete</button>
                </form>
            </td>
        </tr>

    </tbody>
</table>

{% endblock %}